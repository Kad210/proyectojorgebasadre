{
    "manifest_version": 3,
    "name": "Control de Sitios Jorge Basadre",
    "version": "1.0",
    "description": "Bloquea sitios web según la configuración del panel del profesor.",
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "http://127.0.0.1:8000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    }
}